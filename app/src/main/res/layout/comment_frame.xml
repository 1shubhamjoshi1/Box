<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:tools="http://schemas.android.com/tools"
                android:orientation="vertical"
                android:background="#000"
                android:layout_marginBottom="1dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_marginLeft="20dp"
        android:layout_height="30dp"
        android:layout_marginTop="5dp"
        android:id="@+id/ownerI"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/usernameI"
        tools:text="1shubhamjoshi1"
        android:paddingLeft="10dp"
        android:textColor="@color/appMainColor"
        android:textSize="14sp"
        android:layout_alignParentTop="true"
        android:layout_toEndOf="@+id/ownerI"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="lsfjsldfjdsjfldsjfdsljfdsfdsl"
        android:id="@+id/commentI"
        android:paddingLeft="10dp"
        android:layout_marginTop="-10dp"
        android:textColor="#fff"
        android:layout_below="@+id/ownerI"
        android:layout_toEndOf="@+id/ownerI"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:background="@color/editTextColor"
        android:layout_marginTop="15dp"
        android:layout_height="1dp"
        android:layout_below="@+id/commentI"
        android:layout_alignEnd="@+id/commentI"
        android:id="@+id/linearLayout5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/timeI"
        android:textColor="#fff"

        android:layout_marginRight="10dp"

        android:layout_above="@+id/linearLayout5"
        android:layout_alignParentEnd="true"/>

</RelativeLayout>